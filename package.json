{
  "name": "whatsapp-habit-tracker",
  "version": "0.1.0",
  "type": "commonjs",
  "scripts": {
    "dev": "tsx src/server.ts",
    "build": "prisma generate --schema src/prisma/schema.prisma && prisma migrate deploy --schema src/prisma/schema.prisma && tsc --project tsconfig.json",
    "start": "node dist/server.js",
    "prisma:generate": "prisma generate --schema src/prisma/schema.prisma",
    "prisma:migrate": "prisma migrate deploy --schema src/prisma/schema.prisma"
  },
  "prisma": {
    "schema": "src/prisma/schema.prisma"
  },
  "dependencies": {
    "@prisma/client": "^6.19.2",
    "cloudflared": "^0.7.1",
    "dotenv": "^16.4.5",
    "fastify": "^4.28.1",
    "fastify-plugin": "^4.5.1",
    "node-cron": "^3.0.3",
    "undici": "^6.19.8",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@types/node-cron": "^3.0.11",
    "prisma": "^6.19.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.2",
    "typescript": "^5.6.3"
  }
}
